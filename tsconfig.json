{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": false,
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "paths": {
        "@*": [
            "./src*"
          ]
      },
      "noEmit": true
    },
    "include": ["src/*", "src/**/*"],
    "exclude": ["node_modules"]
  }